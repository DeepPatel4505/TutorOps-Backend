{
    "name": "tutor-ai-backend",
    "version": "1.0.0",
    "main": "src/index.js",
    "type": "module",
    "imports": {
        "#src/*": "./src/*",
        "#utils/*": "./src/utils/*",
        "#controllers/*": "./src/controllers/*",
        "#middlewares/*": "./src/middlewares/*",
        "#services/*": "./src/services/*",
        "#models/*": "./src/models/*",
        "#config/*": "./src/config/*",
        "#types/*": "./src/types/*",
        "#routes/*": "./src/routes/*",
        "#validators/*": "./src/validators/*",
        "#core/*": "./src/core/*",
        "#entities/*": "./src/entities/*",
        "#errors/*": "./src/errors/*",
        "#api/*": "./src/api/*"
    },
    "scripts": {
        "dev": "nodemon --exec tsx src/index.js",
        "start": "tsx src/index.js",
        "build": "node src/index.js",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "migrate": "npx prisma migrate dev && npx prisma generate",
        "studio": "npx prisma studio",
        "worker:email" : "tsx src/workers/email.worker.js"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "@bull-board/api": "^6.16.4",
        "@bull-board/express": "^6.16.4",
        "@prisma/adapter-pg": "^7.0.1",
        "@prisma/client": "^7.0.1",
        "axios": "^1.12.2",
        "bcryptjs": "^3.0.2",
        "bullmq": "^5.67.2",
        "connect-redis": "^6.1.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csurf": "^1.11.0",
        "dotenv": "^16.6.1",
        "express": "^5.1.0",
        "express-rate-limit": "^8.2.1",
        "express-session": "^1.18.2",
        "ioredis": "^5.8.2",
        "nodemailer": "^7.0.13",
        "pg": "^8.16.3",
        "pino": "^9.11.0",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "nodemon": "^3.1.10",
        "pino-pretty": "^13.1.2",
        "prettier": "^3.5.3",
        "prisma": "^7.0.1",
        "tsx": "^4.20.6"
    }
}
